.sidebar
  .header
    %p.header__username
      = current_user.name
    = link_to edit_user_registration_path do
      %i.header__btn-right.fa.fa-cog
    = link_to new_group_path do
      %i.header__btn-left.fa.fa-pencil-square-o
  .sidebar__groups
    = render "sidebar__groups"
.contents
  .contents__header
    .name
      %p.groupname
        = @groupname
      %p.membername
        - @members.each do |member|
          = @membername = member[:name]
    .box Edit
  .contents__messages
    = render "contents__messages"
  .contents__form
    .contents__form__input
      %input.field{ type: "text", placeholder: "type a message" }
      .contents__form__input__btn
        %i.input-btn.fa.fa-picture-o
      %input.button{ type: "submit", value: "Send" }


