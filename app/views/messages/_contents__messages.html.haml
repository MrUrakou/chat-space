- @group.messages.each do |message|
  .message-format{'data-message-id': message.id}
    .message-top
      .message-top__name
        = message.user.name
      .message-top__date
        = format_posted_time(message.created_at)
    .message-bottom
      = message.text
      = image_tag message.image, size:'120x180' if message.image.present?
